{
  "name": "top-ts-boiler-plate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "12.13.1",
    "yarn": "1.19.0"
  },
  "scripts": {
    "postinstall": "yarn build",
    "build": "tsc -p .",
    "build:dev": "sucrase ./src -d ./dist --transforms typescript,imports",
    "start": "node ./dist/server.js",
    "start:dev": "NODE_ENV=dev nodemon src/server.ts",
    "start:debug": "NODE_ENV=dev nodemon src/server.ts --inspect",
    "pretest": "yarn mg:test",
    "test": "NODE_ENV=test jest --no-cache",
    "test:watch": "yarn test --watch",
    "test:dev": "yarn lint && yarn test",
    "lint": "eslint ./src/**/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "dc:up": "docker-compose up --build -d",
    "dc:down": "docker-compose down",
    "mg": "NODE_ENV=dev node_modules/.bin/sequelize db:migrate",
    "mg:undo": "NODE_ENV=dev node_modules/.bin/sequelize db:migrate:undo",
    "mg:test": "NODE_ENV=test node_modules/.bin/sequelize db:migrate",
    "mg:test:undo": "NODE_ENV=test node_modules/.bin/sequelize db:migrate:undo"
  },
  "dependencies": {
    "@types/jest": "^25.1.5",
    "@types/supertest": "^2.0.8",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.0",
    "helmet": "^3.22.0",
    "jest": "^25.2.7",
    "morgan": "^1.10.0",
    "parse-database-url": "^0.3.0",
    "pg": "^8.0.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.5",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.30",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/express-http-proxy": "^1.5.12",
    "@types/helmet": "^0.0.45",
    "@types/morgan": "^1.9.0",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "2.7.0",
    "nodemon": "^2.0.2",
    "sequelize-cli": "^5.5.1",
    "sucrase": "^3.13.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  }
}
